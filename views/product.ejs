<!DOCTYPE html>
<html>
<head>
	<title><%= title %></title>
	<%- include('head'); %>
</head>
<body>
<%- include('header'); %>
	
<div class="inbox">

		<h3>PRUDUCT DISPLAY</h3>
		<h2><%= title %></h2>
		<h2 class="line"></h2>
		<div class="container" style=" margin-top: 20px;">
			<div class="row">
				<% data.forEach(function(item){ %>
                    <div class="col-xs-6 col-sm-4 col-md-3 col-lg-3 product-item"  style="text-align: center">
						<a href='/product-detail/<%- item.guid %>.html'><img src="<%- item.cover%>"/>
						<h3><%- item.title%></h3></a>
				    </div>
                <% }) %>
			</div>

		</div>
        <ul class="pager">
            <% if(pageInfo.currentpage>1){%>
                <li style="<%- pageInfo.currentpage==1?'display: none;':''%>"><a href="?pageIndex=<%- pageInfo.currentpage>1?(pageInfo.currentpage-1):1 %>">上一页</a></li>
            <%}%>
            <% if(pageInfo.currentpage<pageInfo.totalpage){%>
                <li style="<%- pageInfo.currentpage==pageInfo.totalpage?'display: none;':''%>"><a href="?pageIndex=<%- pageInfo.currentpage+1 %>">下一页</a></li>
            <%}%>
          </ul>
		

</div>

<%- include('footer'); %>
</body>
</html>